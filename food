            Pak už jedeš kopírování modelu.
          </p>
          <a href="#rezervace" class="btn focus-ring mt-4 block rounded-2xl bg-amber-500 px-4 py-3 text-center font-semibold text-black hover:brightness-110">
            Spustit první rezervaci
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="mx-auto max-w-6xl px-4 pb-10 pt-4">
    <div class="divider h-px my-6"></div>
    <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4 text-sm text-white/60">
      <div>
        <div class="font-semibold text-white/80">VOZÍK</div>
        <div class="text-xs mt-1">Půjč si. Jezdi. Vydělávej.</div>
      </div>
      <div class="flex flex-wrap gap-3">
        <a href="#cenik" class="hover:text-white">Ceník</a>
        <a href="#rezervace" class="hover:text-white">Rezervace</a>
        <a href="#faq" class="hover:text-white">FAQ</a>
        <a href="#kontakt" class="hover:text-white">Kontakt</a>
      </div>
    </div>
  </footer>

  <!-- Sticky bottom CTA -->
  <div class="fixed bottom-3 left-0 right-0 z-40">
    <div class="mx-auto max-w-6xl px-4">
      <div class="glass ring-soft rounded-2xl px-4 py-3 flex flex-col sm:flex-row items-center justify-between gap-3">
        <div class="text-sm">
          <span class="font-semibold">1 999 Kč / den</span> <span class="text-white/70">• bez kauce • předání do 10 min</span>
        </div>
        <div class="flex gap-2">
          <a href="#rezervace" class="btn focus-ring rounded-xl bg-amber-500 px-4 py-2 text-sm font-semibold text-black hover:brightness-110">Rezervovat</a>
          <a href="#cenik" class="btn focus-ring rounded-xl bg-white/5 px-4 py-2 text-sm font-semibold text-white hover:bg-white/8 border border-white/10">Balíčky</a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // -------- Helpers
    const fmt = (n) => new Intl.NumberFormat('cs-CZ').format(Math.max(0, Math.round(n))) + " Kč";
    const daysBetween = (from, to) => {
      if (!from || !to) return 0;
      const a = new Date(from + "T00:00:00");
      const b = new Date(to + "T00:00:00");
      const ms = b - a;
      const d = Math.floor(ms / (1000*60*60*24)) + 1; // inclusive
      return isFinite(d) && d > 0 ? d : 0;
    };

    // -------- Elements
    const cityQuick = document.getElementById("cityQuick");
    const dateFromQuick = document.getElementById("dateFromQuick");
    const dateToQuick = document.getElementById("dateToQuick");
    const btnGoReserve = document.getElementById("btnGoReserve");
    const btnScrollReserve = document.getElementById("btnScrollReserve");

    const city = document.getElementById("city");
    const dateFrom = document.getElementById("dateFrom");
    const dateTo = document.getElementById("dateTo");
    const pickupHint = document.getElementById("pickupHint");

    const packStarter = document.getElementById("packStarter");
    const packPro = document.getElementById("packPro");
    const packClean = document.getElementById("packClean");
    const packSafe = document.getElementById("packSafe");

    const sumBasic = document.getElementById("sumBasic");
    const sumPacks = document.getElementById("sumPacks");
    const sumTotal = document.getElementById("sumTotal");
    const daysBadge = document.getElementById("daysBadge");

    const btnSubmit = document.getElementById("btnSubmit");
    const modal = document.getElementById("modal");
    const modalText = document.getElementById("modalText");
    const modalClose = document.getElementById("modalClose");
    const copyBtn = document.getElementById("copyBtn");

    const calWrap = document.getElementById("calendar");
    const calMonthLabel = document.getElementById("calMonthLabel");

    // -------- Default dates (today + 1)
    const today = new Date();
    const pad = (x) => String(x).padStart(2, "0");
    const toISO = (d) => `${d.getFullYear()}-${pad(d.getMonth()+1)}-${pad(d.getDate())}`;
    const d1 = new Date(today); d1.setDate(d1.getDate()+1);
    const d2 = new Date(today); d2.setDate(d2.getDate()+2);
    const minISO = toISO(d1);

    [dateFromQuick, dateToQuick, dateFrom, dateTo].forEach(inp => inp.min = minISO);

    dateFromQuick.value = toISO(d1);
    dateToQuick.value = toISO(d2);
    dateFrom.value = toISO(d1);
    dateTo.value = toISO(d2);

    // -------- City pickup hints
    const pickupByCity = {
      uh: "Vyzvednutí: Uherské Hradiště — domluvené parkoviště / dvůr (po potvrzení termínu).",
      zl: "Vyzvednutí: Zlín — domluvené parkoviště / dvůr (po potvrzení termínu).",
      br: "Vyzvednutí: Brno — domluvené parkoviště / dvůr (po potvrzení termínu).",
      pr: "Vyzvednutí: Praha — domluvené parkoviště / dvůr (po potvrzení termínu).",
    };

    function syncCity() {
      pickupHint.textContent = pickupByCity[city.value] || pickupByCity.uh;
      renderCalendar(); // demo: different pattern per city
      calc();
    }

    // -------- Pricing
    const BASIC = 1999;
    const PACKS = {
      starter: 499,
      pro: 999,
      clean: 399,
      safe: 599
    };

    function calc() {
      const days = daysBetween(dateFrom.value, dateTo.value);
      daysBadge.textContent = days + (days === 1 ? " den" : (days < 5 ? " dny" : " dní"));

      const packsPerDay =
        (packStarter.checked ? PACKS.starter : 0) +
        (packPro.checked ? PACKS.pro : 0) +
        (packClean.checked ? PACKS.clean : 0) +
        (packSafe.checked ? PACKS.safe : 0);

      const basicTotal = days * BASIC;
      const packsTotal = days * packsPerDay;
      const total = basicTotal + packsTotal;

      sumBasic.textContent = fmt(basicTotal);
      sumPacks.textContent = fmt(packsTotal);
      sumTotal.textContent = fmt(total);
    }

    // -------- Calendar demo renderer (current month)
    function renderCalendar() {
      calWrap.innerHTML = "";
      const now = new Date();
      const year = now.getFullYear();
      const month = now.getMonth();
      const first = new Date(year, month, 1);
      const last = new Date(year, month + 1, 0);
      const monthName = now.toLocaleDateString("cs-CZ", { month: "long", year: "numeric" });
      calMonthLabel.textContent = monthName;

      // Monday-first offset
      const dow = (first.getDay() + 6) % 7; // 0=Mon..6=Sun
      for (let i = 0; i < dow; i++) {
        const s = document.createElement("div");
        s.className = "h-10";
        calWrap.appendChild(s);
      }

      // deterministic pseudo-random based on city to keep stable per city
      const seed = (city.value || "uh").split("").reduce((a,c)=>a + c.charCodeAt(0), 0);

      for (let day = 1; day <= last.getDate(); day++) {
        const d = new Date(year, month, day);
        const iso = toISO(d);

        // demo: 25% booked
        const hash = (day * 9301 + seed * 49297) % 233280;
        const booked = (hash / 233280) < 0.25;

        const btn = document.createElement("button");
        btn.type = "button";
        btn.dataset.iso = iso;
        btn.className = "h-10 rounded-xl border text-sm font-semibold transition focus-ring";
        btn.classList.add(booked ? "bg-rose-500/10 border-rose-500/25 text-rose-200" : "bg-emerald-500/10 border-emerald-500/25 text-emerald-200");
        btn.textContent = day;

        btn.addEventListener("click", () => {
          alert(`${iso}\nStav: ${booked ? "obsazeno" : "volno"} (demo)`);
        });

        calWrap.appendChild(btn);
      }
    }

    // -------- Submission (MVP: show message)
    function buildMessage() {
      const dFrom = dateFrom.value || "—";
      const dTo = dateTo.value || "—";
      const days = daysBetween(dFrom, dTo);

      const packs = [];
      if (packStarter.checked) packs.push("STARTER (+499/den)");
      if (packPro.checked) packs.push("PRO (+999/den)");
      if (packClean.checked) packs.push("CLEAN (+399/den)");
      if (packSafe.checked) packs.push("SAFE (+599/den)");

      const packsText = packs.length ? packs.join(", ") : "Žádné";

      const note = document.getElementById("note").value?.trim() || "—";
      const name = document.getElementById("name").value?.trim() || "—";
      const phone = document.getElementById("phone").value?.trim() || "—";
      const email = document.getElementById("email").value?.trim() || "—";

      const total = sumTotal.textContent;

      const cityLabel = city.options[city.selectedIndex]?.textContent || "—";

      return [
        "VOZÍK — Rezervace / poptávka",
        "---------------------------",
        `Město: ${cityLabel}`,
        `Termín: ${dFrom} → ${dTo} (${days} dní)`,
        `Balíčky: ${packsText}`,
        `Rekapitulace: ${total}`,
        "",
        `Kontakt: ${name}`,
        `Telefon: ${phone}`,
        `E-mail: ${email}`,
        "",
        "Poznámka:",
        note,
        "",
        "Pozn.: MVP — prosím potvrďte dostupnost a místo vyzvednutí."
      ].join("\n");
    }

    function openModal(text) {
      modalText.textContent = text;
      modal.classList.remove("hidden");
      modal.classList.add("flex");
    }
    function closeModal() {
      modal.classList.add("hidden");
      modal.classList.remove("flex");
    }

    // -------- Events
    [city, dateFrom, dateTo, packStarter, packPro, packClean, packSafe].forEach(el => {
      el.addEventListener("change", () => {
        // keep dateTo >= dateFrom
        if (dateFrom.value && dateTo.value && dateTo.value < dateFrom.value) dateTo.value = dateFrom.value;
        calc();
      });
    });

    city.addEventListener("change", syncCity);

    btnSubmit.addEventListener("click", () => {
      // ultra-basic validation
      const phone = document.getElementById("phone").value.trim();
      const email = document.getElementById("email").value.trim();
      if (!dateFrom.value || !dateTo.value) return alert("Vyber termín (Od / Do).");
      if (!phone && !email) return alert("Zadej telefon nebo e-mail (aspoň jeden).");
      openModal(buildMessage());
    });

    modalClose.addEventListener("click", closeModal);
    modal.addEventListener("click", (e) => { if (e.target === modal) closeModal(); });

    copyBtn.addEventListener("click", async () => {
      try {
        await navigator.clipboard.writeText(modalText.textContent);
        copyBtn.textContent = "Zkopírováno ✅";
        setTimeout(()=>copyBtn.textContent="Kopírovat text", 1200);
      } catch {
        alert("Nepodařilo se kopírovat. Označ text ručně.");
      }
    });

    btnGoReserve.addEventListener("click", () => {
      city.value = cityQuick.value;
      dateFrom.value = dateFromQuick.value;
      dateTo.value = dateToQuick.value;
      syncCity();
      document.getElementById("rezervace").scrollIntoView({behavior:"smooth", block:"start"});
    });

    btnScrollReserve.addEventListener("click", () => {
      document.getElementById("rezervace").scrollIntoView({behavior:"smooth", block:"start"});
    });

    // init
    syncCity();
    calc();
    renderCalendar();
  </script>
</body>
</html>
